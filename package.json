{
  "name": "typescript-lib-starter",
  "version": "1.0.0",
  "description": "Put here a lib's description.",
  "main": "./lib",
  "types": "./lib",
  "author": "Maksim Sinik <maksim@sinik.it>",
  "license": "MIT",
  "scripts": {
    "prebuild": "npm run lint && npm run clean-build",
    "build": "tsc",
    "clean-build": "rimraf ./lib && mkdir lib",
    "update": "npx npm-check -u",
    "prettier": "prettier --loglevel warn --write \"src/**/*.{ts,tsx}\"",
    "prelint": "npm run prettier",
    "lint": "tslint --fix -c tslint.json -t stylish -p ./tsconfig.json",
    "postlint": "tsc --noEmit -p ./tsconfig.json",
    "prepublishOnly": "npm run build",
    "test": "npm run build && tap tests/**/*.ts",
    "test:watch": "chokidar \"src/**/*.ts\" \"tests/**/*.ts\" -c \"npm run build-and-test\"",
    "build-and-test": "rimraf ./lib && tsc && tap -J \"tests/**/*.ts\"",
    "test:report": "npm run test | tee out.tap",
    "test:reporter": "tap-mocha-reporter xunit < out.tap > junit-testresults.xml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fox1t/typescript-lib-starter.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/fox1t/typescript-lib-starter/issues"
  },
  "homepage": "https://github.com/fox1t/typescript-lib-starter#readme",
  "devDependencies": {
    "@types/node": "~11.13.5",
    "chokidar-cli": "~1.2.2",
    "husky": "~1.3.1",
    "prettier": "~1.17.0",
    "rimraf": "~2.6.3",
    "tap": "~12.6.2",
    "tap-mocha-reporter": "~4.0.1",
    "ts-node": "~8.1.0",
    "tslint": "~5.16.0",
    "tslint-config-prettier": "~1.18.0",
    "typescript": "~3.4.4"
  },
  "files": [
    "/lib"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
